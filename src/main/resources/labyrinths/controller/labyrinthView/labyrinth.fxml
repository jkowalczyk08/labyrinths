<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="labyrinths.controller.labyrinthView.LabyrinthController">
   <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <HBox spacing="20.0">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets left="30.0" top="50.0" />
         </padding>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <Label text="Algorithm:">
            <font>
               <Font name="System Bold" size="18.0" />
            </font>
         </Label>
         <Button fx:id="dfsBtn" mnemonicParsing="false" text="DFS">
            <HBox.margin>
               <Insets right="20.0" />
            </HBox.margin>
            <font>
               <Font size="14.0" />
            </font>
         </Button>
      </HBox>
      <HBox spacing="20.0">
         <padding>
            <Insets left="30.0" top="30.0"/>
         </padding>
         <Button fx:id="startStopBtn" mnemonicParsing="false">
            <graphic>
               <ImageView fx:id="startStopImg" fitHeight="70.0" fitWidth="70.0" pickOnBounds="true"
                          preserveRatio="true">
               </ImageView>
            </graphic>
         </Button>
         <Button fx:id="fastForwardBtn" mnemonicParsing="false">
            <graphic>
               <ImageView fx:id="fastForwardImg" fitHeight="70.0" fitWidth="70.0" pickOnBounds="true"
                          preserveRatio="true"/>
            </graphic>
         </Button>
         <Button fx:id="pauseBtn" mnemonicParsing="false">
            <graphic>
               <ImageView fx:id="pauseImg" fitHeight="70.0" fitWidth="70.0" pickOnBounds="true" preserveRatio="true"/>
            </graphic>
         </Button>
      </HBox>
      <HBox VBox.vgrow="ALWAYS">
         <VBox.margin>
            <Insets left="30.0" right="100.0" top="20.0"/>
         </VBox.margin>
         <ProgressBar fx:id="progressBar" progress="0.0" HBox.hgrow="ALWAYS"/>
      </HBox>
      <Pane fx:id="labyrinthPane" VBox.vgrow="ALWAYS">
         <VBox.margin>
            <Insets bottom="50.0" left="80.0" right="80.0" top="30.0" />
         </VBox.margin>
      </Pane>
   </VBox>
</AnchorPane>
